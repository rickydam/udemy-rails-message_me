<h2 class="ui center aligned large header">
  Welcome to MessageMe - <em>a complete Chat App</em>
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular pink power off tiny icon"></i>
  Sign up to continue
</h4>

<div class="ui placeholder segment">
  <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
    <div class="field">
      <%= f.label :username, "Choose a username" %>
      <div class="ui left icon input">
        <%= f.text_field :username, placeholder: "Choose a username" %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :password, "Choose a password" %>
      <div class="ui left icon input">
        <%= f.password_field :password, placeholder: "Choose a password" %>
        <i class="lock icon"></i>
      </div>
    </div>
    <%= f.button "Sign Up", class: "ui pink submit button" %>
  <% end %>
</div>